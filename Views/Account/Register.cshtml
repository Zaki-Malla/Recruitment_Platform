@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<partial name="_ValidationScriptsPartial" />

<body>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <main class="main" id="top">
        <div class="container">
            <div class="row flex-center min-vh-100 py-5">
                <div class="col-lg-5">
                    <div class="text-center mb-7">
                        <h3 class="text-1000">Sign Up</h3>
                        <p class="text-700">Create your account today</p>
                    </div>
                    <form asp-action="AddAccount" asp-controller="Account" method="post">
                        <div class="mb-3 text-start">
                            <label class="form-label" asp-for="Name">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label" asp-for="Email">Email address</label>
                            <input class="form-control" asp-for="Email" placeholder="name@example.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-sm-6">
                                <label class="form-label" asp-for="Password">Password</label>
                                <input class="form-control" asp-for="Password" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label" asp-for="AccountType">Account Type</label>
                            <select class="form-select" asp-for="AccountType">
                                <option value="">-- Select Account Type --</option>
                                <option value="User">Looking for a Job</option>
                                <option value="Employer">Employer Looking for Employees</option>
                            </select>
                            <span asp-validation-for="AccountType" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="AcceptTerms">
                            <label class="form-label fs--1 text-none" asp-for="AcceptTerms">I accept the <a href="#!">terms</a> and <a href="#!">privacy policy</a></label>
                            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary w-100 mb-3" type="submit">Sign up</button>
                        <div class="text-center">
                            <a class="fs--1 fw-bold" asp-action="Login" asp-controller="Account">Sign in to an existing account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
