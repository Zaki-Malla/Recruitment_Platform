<div class="content">
    <div class="pb-10">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Post a New Job</h5>
            </div>
            <div class="card-body">
                <form asp-action="PostJob" asp-controller="Employer" method="POST" enctype="multipart/form-data">

                    <div class="mb-4">
                        <label for="CompanyName" class="form-label">Company Name</label>
                        <input type="text" id="CompanyName" name="CompanyName" class="form-control" placeholder="Enter your company name" required>
                    </div>


                    <div class="mb-4">
                        <label for="WorkType" class="form-label">Job Type</label>
                        <select id="WorkType" name="WorkType" class="form-select" required>
                            <option value="Remote">Remote</option>
                            <option value="Onsite">On-Site</option>
                        </select>
                    </div>


                    <div class="mb-4">
                        <label for="CompanyAddress" class="form-label">Company Address</label>
                        <input type="text" id="CompanyAddress" name="CompanyAddress" class="form-control" placeholder="Enter the work location" required>
                    </div>


                    <div class="mb-4">
                        <label for="JobVacancies" class="form-label">Job Titles</label>
                        <input type="text" id="JobVacancies" name="JobVacancies" class="form-control" placeholder="Enter job titles (e.g., Software Developer, Graphic Designer)" required>
                        <small class="form-text text-muted">Separate job titles with commas.</small>
                    </div>


                    <div class="mb-4">
                        <label for="Description" class="form-label">Job & Company Description</label>
                        <textarea id="Description" name="Description" class="form-control" rows="5" placeholder="Describe your company and the job role" required></textarea>
                    </div>


                    <div class="mb-4">
                        <label for="Skills" class="form-label">Required Skills</label>
                        <input type="text" id="Skills" name="Skills" class="form-control" placeholder="Add skills (e.g., JavaScript, Leadership)" required>
                        <small class="form-text text-muted">Separate skills with commas.</small>
                    </div>


                    <div class="mb-4">
                        <label for="JobImage" class="form-label">Job Post Image</label>
                        <input type="file" id="JobImage" name="JobImage" class="form-control" accept="image/*">
                        <small class="form-text text-muted">Upload an image for the job post.</small>
                    </div>


                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg">Publish Job</button>
                        <a asp-controller="Home" asp-action="EmployerDashboard" class="btn btn-secondary btn-lg ms-3">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
